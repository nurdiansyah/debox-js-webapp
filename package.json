{
  "name": "@debox-client/webapp-core",
  "version": "1.0.0",
  "description": "debox framework webapp core.",
  "publishConfig": {
    "registry": "http://devel.deboxserver:8081/artifactory/api/npm/npm-local"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.com/debox-npm-client-webapp-core"
  },
  "keywords": [
    "webapp",
    "component",
    "react"
  ],
  "author": "Nurdiansyah",
  "main": "index.js",
  "jest": {
    "preset": "@debox-devel/webapp"
  },
  "dependencies": {
    "@debox-client/core": "1.0.*",
    "classnames": "2.2.5",
    "dom-helpers": "^2.4.0",
    "eventsource-polyfill": "^0.9.6",
    "fastclick": "^1.0.6",
    "react-dom": "16.0.*"
  },
  "devDependencies": {
    "@debox-devel/webapp": "^1.0.0",
    "modernizr": "^3.5.0"
  },
  "scripts": {
    "eslint": "eslint -c .eslintrc.json ./src",
    "prettier": "prettier \"src/**/*.js?x\"",
    "flow": "flow",
    "check": "npm run flow && npm run eslint -- --fix",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production npm run babel && npm run build:flow",
    "build:flow": "flow-copy-source src libs && cpx \"src/**/*.flow\" libs",
    "predeploy": "npm run check && npm run build",
    "cpPkgJson": "cpx package.json libs",
    "deploy": "npm run cpPkgJson && cd libs && npm publish",
    "clean": "rimraf libs",
    "babel": "babel ./src --ignore '**/__tests__' --out-dir ./libs",
    "test": "cross-env NODE_ENV=test npm run flow && jest 'src/.*/__tests__/.*(spec)\\.jsx?$'",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "modernizr": "modernizr -c .modernizrrc.json -d ./src/components/utils/modernizr.js"
  }
}
